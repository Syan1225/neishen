<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.im.mapper.ActivityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.im.entity.Activity">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="content" property="content" />
        <result column="comment_count" property="commentCount" />
        <result column="ts_create" property="tsCreate" />
        <result column="address" property="address" />
        <result column="device" property="device" />
        <result column="praise_count" property="praiseCount" />
        <result column="images" property="images" />
        <result column="video" property="video" />
        <result column="ts_delete" property="tsDelete" />
        <result column="ts_pin" property="tsPin" />
        <result column="from_id" property="fromId" />
        <result column="forward_times" property="forwardTimes" />
        <result column="visibility" property="visibility" />
        <result column="user_ids" property="userIds" />
        <association property="user" javaType="org.jeecg.modules.im.entity.User">
            <result column="u_id" property="id"/>
            <result column="u_nickname" property="nickname"/>
            <result column="u_account" property="account"/>
            <result column="u_small_avatar" property="smallAvatar"/>
        </association>
        <collection property="users" ofType="org.jeecg.modules.im.entity.User">
            <result column="v_user_id" property="id"/>
            <result column="v_user_nickname" property="nickname"/>
            <result column="v_user_account" property="account"/>
            <result column="v_user_small_avatar" property="smallAvatar"/>
        </collection>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, content, comment_count, address, device, praise_count, images, video, ts_delete, ts_pin, from_id, forward_times,visibility,user_ids
    </sql>

    <select id="pagination" resultMap="BaseResultMap">
        SELECT a.id,a.ts_create,<include refid="Base_Column_List" />,
        u.id u_id,u.nickname u_nickname,u.account u_account,u.small_avatar u_small_avatar,
        vu.id v_user_id,vu.nickname v_user_nickname,vu.account v_user_account,vu.small_avatar v_user_small_avatar
        from im_activity a
        left join im_user u on u.id = a.user_id
        left join im_user vu on FIND_IN_SET(vu.id,a.user_ids)
        <where>
            <choose>
                <when test="q.isDelete!=null and q.isDelete==true">
                    ts_delete >0
                </when>
                <otherwise>
                    (ts_delete = 0)
                </otherwise>
            </choose>
            <if test="q.userSearch!=null and q.userSearch!=''">
                and(u.nickname like concat('%',#{q.userSearch},'%') or u.account like concat('%',#{q.userSearch},'%') or u.username like concat('%',#{q.userSearch},'%') or u.mobile like concat('%',#{q.userSearch},'%'))
            </if>
            <if test="q.userId!=null and q.userId!=''">
                and user_id=#{q.userId}
            </if>
            <if test="q.ts_create!=null">
                and a.ts_create &lt;= UNIX_TIMESTAMP(#{q.ts_create})*1000
            </if>
        </where>
        <if test="q.column !=null and q.column!='' and q.order!=null and q.order!=''">
            order by ${q.column} ${q.order}
        </if>
    </select>

    <update id="delLogicBatch">
        update im_activity set ts_delete = #{tsDelete} where id in(#{ids})
    </update>

</mapper>
